CREATE TABLE fav (
id SERIAL,
post_id INTEGER REFERENCES post(id) ON DELETE CASCADE,
account_id INTEGER REFERENCES account(id) ON DELETE CASCADE,
created_at TIMESTAMPTZ NOT NULL DEFAULT NOW(),
updated_at TIMESTAMPTZ NOT NULL DEFAULT NOW(),
UNIQUE(post_id, account_id),
PRIMARY KEY(id)
);

--------------------------------------------------------------------

SELECT NOW(), NOW() AT TIME ZONE 'UTC', NOW() AT TIME ZONE 'HST';
now | timezone | timezone
------------------------------+---------------------------+---------------------------
2021-12-10 11:42:51.52127-04 | 2021-10-10 15:42:51.52127 | 2021-10-10 05:42:51.52127

--------------------------------------------------------------------

SELECT NOW()::DATE, CAST(NOW() AS DATE), CAST(NOW() AS TIME);
now | now | now
------------+------------+-----------------
2019-06-10 | 2019-06-10 | 11:45:42.899995

---------------------------------------------------------------------

postgres=# SELECT NOW(), NOW() - INTERVAL '2 days', (NOW() - INTERVAL '2 days')::DATE;
now | ?column? | date
-------------------------------+-------------------------------+------------
2019-06-10 11:56:34.886679-04 | 2019-06-08 11:56:34.886679-04 | 2019-06-08
